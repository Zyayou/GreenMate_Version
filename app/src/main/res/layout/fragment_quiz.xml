<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.QuizFragment"
    android:background="@color/redblack" >

    <!-- Main -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:gravity="center"
            android:textAlignment="center"
            android:text="페트병은 내용물을 비워서 가볍게 헹구고 찌그러트려서 분리수거 해야 한다."
            android:textSize="30dp"
            android:fontFamily="@font/suite_bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/yesBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textViewContent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/icon_yes_btn"/>

        <Button
            android:id="@+id/noBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textViewContent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="200dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/icon_no_btn"/>
    </RelativeLayout>
</LinearLayout>