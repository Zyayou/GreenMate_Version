<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/news3Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgNews3"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"

            android:scaleType = "centerCrop"
            android:background="@drawable/patten02"
            android:src="@drawable/news3"/>

        <TextView
            android:id="@+id/textNews3"
            android:layout_width="460dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"

            android:layout_below="@+id/imgNews3"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="[60초 뉴스]줄어드는 해빙에 전국 '강추위'…결국 인간 탓?" />
    </RelativeLayout>
</FrameLayout>