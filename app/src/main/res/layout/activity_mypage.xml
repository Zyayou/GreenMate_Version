<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/redblack" >

    <!-- 백 버튼 // 이미지, 사이즈 수정 필요-->
    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/moveback_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/Logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/rogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- 프로필 이미지 //원모양으로 바꿔야함 -->
    <ImageView
        android:id="@+id/profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- 닉네임 텍스트 -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="닉네임"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 텍스트 //단계에 맞는 위치로 수정 필요 -->
    <LinearLayout
        android:id="@+id/classtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:text="씨앗, 새싹, 잎, 가지, 나무, 꽃, 열매"
            />

    </LinearLayout>

    <!-- 프로그레스 바 -->
    <ProgressBar
        android:id="@+id/progress1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="1000"
        android:progress="365"
        android:progressDrawable="@drawable/progressbar_my"
        app:layout_constraintTop_toBottomOf="@+id/classtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TableLayout
        android:id="@+id/bottons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/progress1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/bottomSwitch"
        >
        <TableRow>
        <!-- 왼쪽 위 버튼 //4개 전부 색 수정, 글자 삽입 필요 -->
        <Button
            android:id="@+id/goEditProfile"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@color/colorAccent"
            />

        <!-- 오른쪽 위 버튼 -->
        <Button
            android:id="@+id/goWernings"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@color/blue_out"
            />
        </TableRow>

        <TableRow>

        <!-- 왼쪽 아래 버튼 -->
        <Button
            android:id="@+id/goRiview"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@color/blue_out"
            />

        <!-- 오른쪽 아래 버튼 -->
        <Button
            android:id="@+id/goWithdrawal"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@color/colorAccent" />
        </TableRow>
    </TableLayout >


    <!-- 바로가기 버튼 // 색상변경 -->
    <LinearLayout
        android:id="@+id/bottomSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        >

        <ImageButton
            android:id="@+id/gohome"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/m_homerogo"

            android:adjustViewBounds="true"
            android:padding="35dp"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:id="@+id/gochat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/m_qna"


            android:adjustViewBounds="true"
            android:padding="37dp"
            android:scaleType="fitCenter"
            />
        <ImageButton
            android:id="@+id/gomypage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/m_myrogo"


            android:adjustViewBounds="true"
            android:padding="35dp"
            android:scaleType="fitCenter"
            />
    </LinearLayout >
</androidx.constraintlayout.widget.ConstraintLayout>
