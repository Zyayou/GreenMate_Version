<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".eco.EcoDetailFragment"
    android:background="@color/redblack">

    <!-- 검색창 -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:searchIcon="@drawable/icon_black_search"
        app:iconifiedByDefault="false"
        android:background="@drawable/patten01"
        android:backgroundTint="@color/white"
        app:queryHint="검색어를 입력하세요."/>

    <!-- 카테고리 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="카테고리"
        android:textSize="20dp"
        android:textColor="@color/white" />

    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/foldingCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:animationDuration="2000">
        <!--편 부분(안보이는)-->
        <LinearLayout
            android:id="@+id/cellContentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">
            <!-- 일반 종이 종이 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="일반쓰레기"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="종이팩/종이컵"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="종이류"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
            </LinearLayout>
            <!-- 플라 유리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/white"
                    android:text="플라스틱류(PE/PP등)"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="유리병류"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
            </LinearLayout>
            <!-- 발표 비닐 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:buttonTint="@color/white"
                    android:text="발표합성수지(스트로폼)"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/white"
                    android:text="비닐류(필름류)"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
            </LinearLayout>
            <!-- 폐가 재활 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <CheckBox
                    android:id="@+id/checkBox8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:buttonTint="@color/white"
                    android:text="폐가전제품 및 대형폐기물"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/white"
                    android:text="재활용품"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
            </LinearLayout>
            <!-- 금속 고철 페트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <CheckBox
                    android:id="@+id/checkBox10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="금속캔"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="고철류"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="페트병"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
            </LinearLayout>
            <!-- 음식 유해 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <CheckBox
                    android:id="@+id/checkBox13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:buttonTint="@color/white"
                    android:text="음식물류폐기물"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/white"
                    android:text="유해폐기물"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
            </LinearLayout>
            <!-- 불연 기타 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <CheckBox
                    android:id="@+id/checkBox15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/white"
                    android:text="불연성폐기물/가연성폐기물"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
                <CheckBox
                    android:id="@+id/checkBox16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:text="기타"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:checked="true"/>
            </LinearLayout>
            <!-- 버튼 2개 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/catagoryBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/patten01"
                    android:backgroundTint="@color/MainColorG"
                    android:text="카테고리 적용하기"/>

                <Button
                    android:id="@+id/closeBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/patten01"
                    android:backgroundTint="@color/MainColorS"
                    android:text="카테고리 접기"/>

            </LinearLayout>
        </LinearLayout>
        <!--접힌 부분(보이는)-->
        <LinearLayout
            android:id="@+id/cellTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/categoryView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@color/MainColorG"
                android:text="카테고리 적용하기(클릭)"
                android:textColor="@color/black"/>
        </LinearLayout>
    </com.ramotion.foldingcell.FoldingCell>

    <!-- 검색결과 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="검색결과"
        android:textSize="20dp"
        android:textColor="@color/white" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>