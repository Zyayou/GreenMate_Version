<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity"
    android:background="@color/redblack" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@color/redblack"
            android:src="@drawable/icon_logo" />

        <!-- 아이디 -->
        <EditText
            android:id="@+id/loginId"
            android:layout_width="385dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewLogo"
            android:layout_marginTop="100dp"
            android:paddingLeft="20dp"
            android:background="@drawable/patten_loginedit"

            android:gravity="center_vertical"
            android:textColorHint="#FFFFFF"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:hint="아이디"/>

        <!-- 비밀번호 -->
        <EditText
            android:id="@+id/loginPw"
            android:layout_width="385dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginId"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/patten_loginedit"

            android:gravity="center_vertical"
            android:textColorHint="#FFFFFF"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:inputType="textPassword"
            android:hint="비밀번호"/>

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/loginBtn"
            style="@style/defaultButton"
            android:layout_width="385dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginPw"
            android:layout_marginTop="20dp"
            android:background="@drawable/patten01"

            android:textColor="#000000"
            android:text="로그인"
            android:textSize="18dp"
            android:fontFamily="@font/suite_bold"
            android:gravity="center" />

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginBtn"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/redblack"
            android:background="@drawable/patten01"

            android:text="회원가입"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>